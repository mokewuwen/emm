<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="0"
            android:toDegrees="60">
            <shape>
                <gradient
                    android:centerColor="#45a"
                    android:endColor="#a4a"
                    android:startColor="#f58"
                    android:type="sweep" />
                <corners android:radius="8dp" />
            </shape>
        </rotate>
    </item>

    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape>
            <solid android:color="#FFF" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>