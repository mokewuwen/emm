<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".DrawableActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:contentDescription="@string/course"
            android:id="@+id/iv_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/transition_course" />

        <ImageView
            android:id="@+id/iv_wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/level_wifi" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level" />
    </LinearLayout>


    <ImageView
        android:contentDescription="@string/cctv_anime"
        android:id="@+id/iv_cctv_anime"
        android:layout_width="300dp"
        android:layout_height="480dp"
        android:src="@drawable/clip_cctv_anime" />
</LinearLayout>